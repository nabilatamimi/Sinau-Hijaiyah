<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kuis6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="id.sch.smktelkom_mlg.project2.xirpl20810141723.sinauhijaiyah.kuis6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <ImageButton
        android:id="@+id/playkuis"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/play" />

    <ImageButton
        android:id="@+id/kuis2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/kuis1"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/playkuis"
        android:layout_toRightOf="@+id/playkuis"
        android:background="@drawable/cun15" />

    <ImageButton
        android:id="@+id/kuis1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/kuis2"
        android:layout_toRightOf="@+id/kuis2"
        android:background="@drawable/cun9" />

    <ImageButton
        android:id="@+id/kuis3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/hasil"
        android:layout_alignStart="@+id/hasil"
        android:layout_alignTop="@+id/kuis1"
        android:background="@drawable/cun8" />

    <ImageView
        android:id="@+id/hasil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/kuis3"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_toEndOf="@+id/kuis1"
        android:layout_toRightOf="@+id/kuis1"
        app2:srcCompat="@drawable/yes" />

    <ImageButton
        android:id="@+id/menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/playkuis"
        android:layout_alignStart="@+id/playkuis"
        android:layout_below="@+id/playkuis"
        android:background="@drawable/menu" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/playkuis"
        android:layout_toEndOf="@+id/menu"
        android:layout_toRightOf="@+id/menu"
        android:background="@drawable/back" />

</RelativeLayout>

